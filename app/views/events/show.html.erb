<div class="padding" style="padding-bottom: 30px">
  
  <div class="grid_10">
    <div class="module_wrapper">
      <div class="module_header">
        <div>Interviews: <span style="float: right">To Interview, call 415-599-2671, pin 9441-2138</span></div>
      </div><!-- .module_header -->
      <div class="module_padding">
        <% %>
        <% if @interviews.empty? %>
          <h3>Not interviews yet!.  Go out there!</h3>
        <% else %>
          <% @interviews.each do |interview| %>
            <% if interview.audio? %>
              <div class="audio_wrapper">
                Audio recording by <%= interview.user.full_name %>:  <a href="<%= interview.url %>" target="_blank">Play</a>
                <div>Posted <%= time_ago_in_words interview.created_at %> ago</div>
                <div class=""><a href="<%= event_interview_path(@event, interview.id) %>">Engage In Discussion</a></div>
              </div>
            <% else %>
              <div class="video">
                Video recording by <%= interview.user.full_name %>:  <a href="<%= interview.url %>">Play</a>
                <div id="video_<%= interview.id %>" class="video_file"></div>
                <div class=""><a href="<%= event_interview_path(@event, interview.id) %>">Engage In Discussion</a></div>
              </div>
            <% end %>
          <% end %>
        <% end %>
      </div><!-- .module_padding -->
    </div><!-- .module_wrapper -->
  </div>

