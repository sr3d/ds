<div class="padding" style="padding-bottom: 30px">
  
  <div class="grid_10">
    <div class="module_wrapper">
      <div class="module_header">
        <div>Interviews</div>
      </div><!-- .module_header -->
      <div class="module_padding">
        <% @audios.each do |audio| %>
          <div class="audio">
            Audio recording by <%= audio.user.full_name %>:  <a href="<%= audio.url %>">Play</a>
            <div id="audio_<%= audio.id %>" class="mp3_audio"></div>
          </div>
        <% end %>
      </div><!-- .module_padding -->
    </div><!-- .module_wrapper -->
  </div>

  <script type="text/javascript" charset="utf-8">
  $(function() {
    $(".mp3_audio").jPlayer( {
      ready: function () {
        debugger
        $(this).jPlayer("setMedia", {
          mp3: ''
        });
      },
      supplied: "mp3",
      swfPath: "/javascripts/jPlayer/"
    });    
    
  })
  </script>

  <div class="grid_10">
    <div class="module_wrapper">
      <div class="module_header">
        <div><%= @event.name %>'s wall</div>
      </div><!-- .module_header -->
      <div class="module_padding">
        <div class="comments_wrapper">
          <div id="comments" class="comments">
            <% @comments.each do |comment| %>
              <%= render :partial => 'comments/comment', :locals => { :comment => comment } %>
            <% end %>
            <div class="clear"></div>
          </div><!-- .comments -->
          <div class="clear"></div>
          <div id="new_comment_wrapper">
            <hr>
            <strong>Leave a comment</strong>
            <div id="fb-root"></div>
            <script src="http://connect.facebook.net/en_US/all.js#xfbml=1"></script>
            <fb:comments href="<%= event_url(@event) %>" num_posts="15" width="550"></fb:comments>          
          </div><!-- #new_comment_wrapper -->
        </div><!-- .comments_wrapper -->
      </div><!-- .module_padding -->
    </div><!-- .module_wrapper -->
  </div>


  <div class="grid_5">
    <div class="module_wrapper">
      <div class="module_header">
        <div>Social Details</div>
      </div><!-- .module_header -->
      <div class="module_padding">
        
        <div class="summary_wrapper">
          <%= render :partial => 'summary' %>
          
          <div class="row">
            <div class="left">&nbsp;</div><!-- .left -->
            <div class="right"><%= link_to 'Add to Calendar', export_to_calendar_event_path(@event) %></div><!-- .right -->
          </div><!-- .row -->
          
        </div><!-- .summary_wrapper -->
        
      </div><!-- .module_padding -->
    </div><!-- .module_wrapper -->
  
  </div><!-- .grid_6 -->


  <div class="clear"></div>
</div><!-- .padding -->


