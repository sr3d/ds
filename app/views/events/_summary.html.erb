
<div class="what" style="background-color: black">
  <div class="grid_2 alpha">
    What 
  </div>
  <div>
    <%= @event.name %>
    <% if current_user.can_edit_event? @event  %>
      <span class="small"><a href="<%= edit_event_path(@event)%>">[Edit]</a></span>
    <% end %>
  </div>
</div><!-- .what -->


<div class="row">
  <div class="grid_2 alpha">
    When 
  </div>
  <div class="">
    <%= @event.when ? @event.when.strftime('%B %d, %y') : 'No Date Specified' %> - 
    <%= @event.start_time ? @event.start_time.strftime('%H:%M') : 'No Time Specified' %>
  </div>
</div><!-- .row -->

<div class="row">
  <div class="grid_2 alpha">
    WHERE
  </div>
  <div class="">
    <%= @event.venue %>&nbsp;
  </div>
</div><!-- .row -->

<div class="row">
  <div class="grid_2 alpha">
    INFO
  </div>
  <div class="">
    <%= @event.description %>
  </div>
</div><!-- .row -->


<div>
  <div id="fb-root"></div>
  <script src="http://connect.facebook.net/en_US/all.js#xfbml=1"></script>
  <fb:comments href="<%= event_url(@event) %>" num_posts="5" width="260"></fb:comments>
  <div class="clear"></div>  
</div>